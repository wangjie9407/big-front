{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "skipLibCheck": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "lib": ["esnext", "dom"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "types/**/*.d.ts",
      "**/*.ts",
      "components.d.ts"
    ],
    "exclude": ["node_modules"]
  }
  